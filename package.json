{
  "name": "@dvelasquez/ts-crud",
  "author": "Danilo Vel√°squez <danilo.velasquez@gmail.com>",
  "version": "1.0.1-test.2",
  "license": "MIT",
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "scripts": {
    "prepare": "yarn lint:fix && yarn test && yarn build",
    "build": "tsc",
    "lint": "tslint --project .",
    "lint:fix": "tslint --project . --fix",
    "test": "jest",
    "prepublish": "yarn prepare",
    "release": "yarn standard-version",
    "prerelease": "yarn standard-version --prerelease test",
    "commit": "git-cz"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib"
  ],
  "devDependencies": {
    "@types/jest": "^23.1.1",
    "@types/node": "^10.3.5",
    "cz-conventional-changelog": "^2.1.0",
    "jest": "^23.1.0",
    "jest-fetch-mock": "^1.6.5",
    "jest-junit-reporter": "^1.1.0",
    "jest-localstorage-mock": "^2.2.0",
    "prettier": "1.13.5",
    "standard-version": "^4.4.0",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "^2.9.2"
  },
  "jest": {
    "automock": false,
    "testResultsProcessor": "./node_modules/jest-junit-reporter",
    "collectCoverage": true,
    "setupFiles": [
      "jest-localstorage-mock",
      "jest-fetch-mock"
    ],
    "coverageReporters": [
      "html",
      "cobertura"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "moduleNameMapper": {
      "@/(.*)$": "<rootDir>/src/$1"
    },
    "testRegex": "/src/.*\\.spec\\.ts$"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
